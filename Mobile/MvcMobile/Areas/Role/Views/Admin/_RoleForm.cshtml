@if (false)
{
    <script src="/Scripts/jquery-1.5.1-vsdoc.js" type="text/javascript"></script>
}
<div id="role_form_partial">
    <!-- Bang thong bao -->
    <div class="message">
        <ul class="error"></ul>
        <ul class="warning"></ul>
    </div>
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td>Role Name:</td>
            <td>
                <input type="text" id="RoleName" name="role" bindname="RoleName"  />
                <input type="hidden" name="role" value="" bindname="RoleID" />
            </td>            
        </tr>
        <tr>
            <td>Active:</td>
            <td><input type="checkbox" name="role" bindname="IsActived" /></td>
        </tr>
        <tr>
            <td>Description:</td>
            <td><textarea bindname="Description"></textarea></td>
        </tr>        
    </table>    
</div>